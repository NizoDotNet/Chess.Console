@page "/"
@using Chess.Blazor.Application.Main
@using Chess.Main.GameFactory
@using Chess.Main.GameFactory.Factories

@code {
    private readonly string[] files = { "A", "B", "C", "D", "E", "F", "G", "H" };
    private readonly string[] ranks = { "8", "7", "6", "5", "4", "3", "2", "1" };
}

<div class="flex flex-col items-center justify-center">
    <div class="flex">
        @for(int i = 0; i < files.Length; i++)
        {
            <div class="w-16 md:w-20 h-6 flex items-center justify-center text-sm">@files[i]</div>
        }
    </div>

    <div class="flex">
        <div class="flex flex-col">
            @for (int rank = 8; rank > 0; rank--)
            {
                <div class="flex">
                    <div class="w-6 h-16 md:h-20 flex items-center justify-center text-sm">@ranks[rank - 1]</div>

                    @for (int file = 1; file <= 8; file++)
                    {
                        bool isDark = (rank + file) % 2 == 1;
                        bool isAvailable = availableMoves.Any(m => m.Rank == rank && (int)m.File == file);

                        <ChessBoardSquare OnPieceClickCallback="OnPieceClick"
                        IsAvailableMove="@isAvailable"
                        IsDark="@isDark"
                        Piece="@GetPiece(rank, file)"
                        Rank="rank"
                        File="file" />
                    }
                </div>
            }
        </div>
    </div>
    <div class="flex">
        @for (int i = 0; i < files.Length; i++)
        {
            <div class="w-16 md:w-20 h-6 flex items-center justify-center text-sm">@files[i]</div>
        }
    </div>
</div>




@code {
    private ClientSideGame game = new(null);
    private List<Coordinate> availableMoves = [];

    protected override void OnInitialized()
    {

    }
    public Piece? GetPiece(int rank, int file) 
    {
        if (game.Board.PieceExist(rank, (File)(file), out Piece piece, out Coordinate _))
            return piece;
        return null;
    }

    public async Task OnPieceClick((Piece piece, int rank, int file) res)
    {
        var moves = game.GetAllowedMoves(res.piece, new Coordinate(res.rank, (File)res.file));
        if (moves.Count != 0)
            availableMoves = moves;
        Console.WriteLine("G");
        StateHasChanged();
    }
  
}