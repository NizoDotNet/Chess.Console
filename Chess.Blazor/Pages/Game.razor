@page "/chess"

@code {
    private readonly string[] files = { "A", "B", "C", "D", "E", "F", "G", "H" };
    private readonly string[] ranks = { "8", "7", "6", "5", "4", "3", "2", "1" };
}

<div class="flex flex-col items-center justify-center">
    <div class="flex">
        @for(int i = 0; i < files.Length; i++)
        {
            <div class="w-16 md:w-20 h-6 flex items-center justify-center text-sm">@files[i]</div>
        }
    </div>

    <div class="flex">
        <div class="flex flex-col">
            @for (int row = 0; row < 8; row++)
            {
                <div class="flex">
                    <div class="w-6 h-16 md:h-20 flex items-center justify-center text-sm">@ranks[row]</div>

                    @for (int col = 0; col < 8; col++)
                    {
                        bool isDark = (row + col) % 2 == 1;
                        <ChessBoardSquare IsDark="@isDark" />
                    }
                </div>
            }
        </div>
    </div>
    <div class="flex">
        @for (int i = 0; i < files.Length; i++)
        {
            <div class="w-16 md:w-20 h-6 flex items-center justify-center text-sm">@files[i]</div>
        }
    </div>
</div>




